{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "resolveJsonModule": true,

    "target": "es2017",
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleDetection": "force", //Stop 'Cannot redeclare block-scoped variable' errors
    "moduleResolution": "nodenext",
    "types": [
      "puppeteer",
    ]
  },
  "include": [
    "**/*",
    "custom.d.ts"
  ]
}
